@model ManagementTool.Framework.Models.Account.LoginVM
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

@using (Html.BeginForm("SignIn", "Account", FormMethod.Post))
{
    <div>
        <fieldset>
            <legend>Account Information</legend>
            <div class="editor-label">
                @Html.LabelFor(l => l.Email, "Email")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(l => l.Email)
            </div>
            <div class="editor-label">
                @Html.LabelFor(l => l.Password, "Password")
            </div>
            <div class="editor-field">
                @Html.PasswordFor(l => l.Password)
            </div>
            
            <p>
                <input type="submit" value="submit" />
            </p>
        </fieldset>
    </div>
}