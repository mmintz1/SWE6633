@model ManagementTool.Framework.Models.Account.RegisterVM
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>

@using (Html.BeginForm("CreateUser", "Account", FormMethod.Post))
{
@Html.LabelFor(l => l.FirstName, "First Name")
@Html.TextBoxFor(l => l.FirstName)

@Html.LabelFor(l => l.LastName, "Last Name")
@Html.TextBoxFor(l => l.LastName)

@Html.LabelFor(l => l.CompanyId, "Company Id")
@Html.TextBoxFor(l => l.CompanyId)

@Html.LabelFor(l => l.Email, "Email")
@Html.TextBoxFor(l => l.Email)

@Html.LabelFor(l => l.Password, "Password")
@Html.PasswordFor(l => l.Password)

@Html.LabelFor(l => l.VerifyPassword, "Confirm Password")
@Html.PasswordFor(l => l.VerifyPassword)

    <input type="submit" value="submit" />
}