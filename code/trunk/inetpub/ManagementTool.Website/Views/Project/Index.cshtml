@model List<ManagementTool.Framework.Models.Project.ProjectVM>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var companyId = (int)ViewBag.CompanyId;
}

<h2>Projects</h2>
<p>@Html.ActionLink("Create Project", "CreateProject", new { controller = "Project", id = @companyId })</p>

<table>
    <tr>
        <th>
            Title
        </th>
        <th>
            Status
        </th>
        <th>
            Due Date
        </th>
        <th>
            Project Manager
        </th>
        <th>

        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DueDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Manager)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditProject", new { controller = "Project", id = item.Id }) |
            @Html.ActionLink("Details", "ProjectDetails", new { controller = "Project", id = item.Id }) |
            @Html.ActionLink("View Tasks", "Index", new { controller = "Task", id = item.Id }) |
            @Html.ActionLink("View Requirements", "Index", new { controller = "Requirement", id = item.Id }) |
            @Html.ActionLink("View Risks", "Index", new { controller = "Risk", id = item.Id }) |
            @Html.ActionLink("View Hours Report", "Report", new { controller = "Project", id = item.Id })
        </td>
    </tr>
}

</table>