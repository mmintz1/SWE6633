@model List<ManagementTool.Framework.Models.Requirement.RequirementVM>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var projectId = (int)ViewBag.ProjectId;
}

<h2>Requirements</h2>

<p>
    @Html.ActionLink("Create Requirement", "CreateRequirement", new { controller = "Requirement", id = @projectId }) |
    @Html.ActionLink("Cancel", "Index", new { controller = "Project" })
</p>

<table>
    <tr>
        <th>
            Title
        </th>
        <th>
            Description
        </th>
        <th>
            Category
        </th>
        <th>
            Type
        </th>
        <th>
            
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditRequirement", new { controller = "Requirement", id = item.Id }) |
            @Html.ActionLink("Details", "RequirementDetails", new { controller = "Requirement", id = item.Id })
        </td>
    </tr>
}

</table>