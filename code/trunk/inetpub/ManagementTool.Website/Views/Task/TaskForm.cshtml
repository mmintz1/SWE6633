@model ManagementTool.Framework.Models.Task.TaskVM
@{
    var action = (string)ViewBag.ControllerAction;
    var title = (string)ViewBag.PageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@title</h2>

@using (Html.BeginForm(@action, "Task", FormMethod.Post, new { @class = "management-form" }))
{
    <div>
        <fieldset>
            <legend></legend>
            @Html.ValidationMessage("ErrorMessage")
            <div class="editor-label">
                @Html.LabelFor(l => l.Title, "Title")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(l => l.Title, new { required = "" } )
            </div>
    
            <div class="editor-label">
                @Html.LabelFor(l => l.Description, "Description")
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(l => l.Description, new { required = "" } )
            </div>

            <div class="editor-label">
                @Html.LabelFor(l => l.DueDate, "Due Date")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(l => l.DueDate)
            </div>

            <div class="editor-label">
                @Html.LabelFor(l => l.Category, "Category")
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(l => l.Category, new SelectList(Enum.GetValues(typeof(ManagementTool.Framework.Enums.RequirementCategory))))
            </div>

            <div class="editor-label">
                @Html.LabelFor(l => l.Status, "Status")
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(l => l.Status, new SelectList(Enum.GetValues(typeof(ManagementTool.Framework.Enums.Status))))
            </div>

            <div class="editor-label">
                @Html.LabelFor(l => l.Developer, "Assigned To")
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(l => l.Developer, new SelectList(Model.CompanyEmployees, "FullName", "FullName"))
            </div>
            <div class="editor-label">
                @Html.LabelFor(l => l.TaskHours, "Hours")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(l => l.TaskHours, new { type = "number" } )
            </div>

            @Html.HiddenFor(l => l.Id)
            @Html.HiddenFor(l => l.ProjectId)

            <p>
                <input type="submit" value="submit" />
                @Html.ActionLink("Cancel", "Index", new { controller = "Task", id = Model.ProjectId })
            </p>
        </fieldset>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#DueDate').Zebra_DatePicker({
            direction: true,
            format: 'm/d/Y',
            show_icon: false
        });

        $('.management-form').validate();
    });
</script>
