@model ManagementTool.Framework.Models.Task.TaskVM
@{
    var action = (string)ViewBag.ControllerAction;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateTask</h2>

@using (Html.BeginForm(@action, "Task", FormMethod.Post))
{
    <div>
        <fieldset>
            <legend></legend>
        
            <div class="editor-label">
                @Html.LabelFor(l => l.Title, "Title")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(l => l.Title)
            </div>
    
            <div class="editor-label">
                @Html.LabelFor(l => l.Description, "Description")
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(l => l.Description)
            </div>

            <div class="editor-label">
                @Html.LabelFor(l => l.DueDate, "Due Date")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(l => l.DueDate)
            </div>

            <div class="editor-label">
                @Html.LabelFor(l => l.Category, "Category")
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(l => l.Category, new SelectList(Enum.GetValues(typeof(ManagementTool.Framework.Enums.RequirementCategory))))
            </div>

            <div class="editor-label">
                @Html.LabelFor(l => l.Status, "Status")
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(l => l.Status, new SelectList(Enum.GetValues(typeof(ManagementTool.Framework.Enums.Status))))
            </div>

            <div class="editor-label">
                @Html.LabelFor(l => l.Developer, "Assigned To")
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(l => l.Developer, Model.Users)
            </div>

            @Html.HiddenFor(l => l.Id)

            <p>
                <input type="submit" value="submit" />
                @Html.ActionLink("Cancel", "Index", new { controller = "Task", id = Model.ProjectId })
            </p>
        </fieldset>
    </div>
}
